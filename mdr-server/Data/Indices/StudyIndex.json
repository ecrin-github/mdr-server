{
  "settings": {
    "index.mapping.ignore_malformed": true,
    "index.number_of_shards": 1,
    "index.auto_expand_replicas": "0-all",
    "analysis": {
      "analyzer": {
        "default": {
          "tokenizer": "default_tokenizer",
          "char_filter": [
            "ecrin_remove_dot",
            "ecrin_rplc_apostrophes"
          ],
          "filter": [
            "lowercase",
            "ecrin_synonyms",
            "default_stop"
          ]
        }
      },
      "filter": {
        "ecrin_synonyms" : {
          "type" : "synonym",
          "synonyms_path" : "synonyms/all_synonyms.txt"
        },
        "default_stop": {
          "type": "stop",
          "stopwords": "_english_"
        }
      },
      "char_filter": {
        "ecrin_remove_dot": {
          "type": "pattern_replace",
          "pattern": "([.])",
          "replacement": ""
        },
        "ecrin_rplc_apostrophes": {
          "type": "pattern_replace",
          "pattern": "(')",
          "replacement": "â€™"
        }
      },
      "tokenizer": {
        "default_tokenizer": {
          "type": "standard"
        }
      }
    }
  },
  "mappings": {
    "dynamic": "strict",
    "_source": {
      "enabled": true
    },
    "properties": {
      "id": {
        "type": "integer"
      },
      "display_title": {
        "type": "text",
        "fielddata": true,
        "analyzer":"standard",
        "copy_to": "text_container"
      },
      "brief_description": {
        "type": "text",
        "fielddata": true,
        "analyzer":"standard",
        "copy_to": "text_container"
      },
      "data_sharing_statement": {
        "type": "text",
        "analyzer":"standard",
        "copy_to": "text_container"
      },
      "study_type": {
        "type": "keyword",
        "copy_to": "text_container"
      },
      "study_status": {
        "type": "keyword",
        "copy_to": "text_container"
      },
      "study_gender_elig": {
        "type": "keyword",
        "copy_to": "text_container"
      },
      "study_enrolment": {
        "type": "integer"
      },
      "min_age": {
        "type": "object",
        "properties": {
          "value": {
            "type": "integer"
          },
          "unit_name": {
            "type": "keyword"
          }
        }
      },
      "max_age": {
        "type": "object",
        "properties": {
          "value": {
            "type": "integer"
          },
          "unit_name": {
            "type": "keyword"
          }
        }
      },
      "study_identifiers": {
        "type": "nested",
