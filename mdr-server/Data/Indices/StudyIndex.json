            "fielddata": true,
            "copy_to": "text_container"
          },
          "identifier_type": {
            "type": "keyword",
            "copy_to": "text_container"
          },
          "identifier_date": {
            "type": "date",
            "format": "yyyy MMM dd"
          },
          "identifier_link": {
            "type": "keyword",
            "eager_global_ordinals": true
          },
          "identifier_org": {
            "type": "text",
            "copy_to": "text_container"
          }
        }
      },
      "study_titles": {
        "type": "nested",
        "properties": {
          "id": {
            "type": "integer"
          },
          "title_type": {
            "type": "keyword",
            "copy_to": "text_container"
          },
          "title_text": {
            "type": "text",
